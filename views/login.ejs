<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <!--Vue-->
    <script src="/javascripts/vue.js"></script>
    <script src="/javascripts/vue-resource.js"></script>
    <!-- Bootstrap -->
    <link href="/stylesheets/bootstrap.css" rel="stylesheet">
    <!--Flat UI-->
    <link href="/stylesheets/flat-ui.css" rel="stylesheet">
    <!--time picker-->
    <link href="/stylesheets/bootstrap-datetimepicker.min.css" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/datastyle.css' />
    <style type="text/css">
        .m15 {
            margin: 15px;
        }
        
        .tc {
            text-align: center;
            font-size: 18px;
            font-weight: 600;
        }
    </style>
</head>

<body>
    <div class="container" id="app">
        <%- message %>
            <form class="col-sm-offset-4 col-sm-4 form-horizontal" role="form" method="post" onsubmit="return false">
                <fieldset>
                    <legend></legend>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <p class="tc">请先登录</p>
                        </div>
                        <div class="panel-body m15">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-user"></span>
                                    </span>
                                    <input type="text" class="form-control" id="username" name="username" v-model="username" placeholder="请输入用户名" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-lock"></span>
                                    </span>
                                    <input type="text" class="form-control" id="password" name="password" v-model="password" placeholder="请输入密码" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block" id="login0" @click="login">登录</button>
                            </div>
                            <div class="form-group">
                                <button type="button" class="btn btn-info col-sm-2 col-sm-offset-10" id="register0" @click="register">注册</button>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </form>
    </div>


    <script src="/javascripts/jquery.js "></script>
    <script src="/javascripts/flat-ui.js "></script>
    <script type="text/javascript" src="/javascripts/bootstrap-datetimepicker.min.js" charset="UTF-8"></script>
    <script src="/javascripts/application.js"></script>
    <!-- this is the bind scripts -->
    <!-- 注意bind的js必须放在页面的最后 -->
    <script src="/javascripts/bind/login.js"></script>
</body>
</head>

</html>